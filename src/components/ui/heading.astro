---
interface Props {
  title: string;
  subtitle?: string;
  className?: string;
}

const { title, subtitle, className } = Astro.props;
---

<div class:list={['pb-[6vh] text-center max-w-screen-md mx-auto', [className]]}>
  <h2
    class='font-extrabold text-4xl sm:text-5xl lg:text-6xl mb-4 lg:mb-8 transition duration-300 text-transparent bg-clip-text bg-gradient-to-r from-text to-mauve/60'
  >
    {title}
  </h2>
  {subtitle && <p class='text-[1rem] sm:text-lg lg:text-xl leading-normal'>{subtitle}</p>}
</div>
